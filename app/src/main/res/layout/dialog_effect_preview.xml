<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <ImageView
        android:id="@+id/bt_image_cancel"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_marginEnd="14dp"
        android:layout_marginTop="13dp"
        android:src="@drawable/icon_cancel_preview_dialog"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="温馨提示"
        android:textSize="15dp"
        android:textColor="#f9f9f9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_tips_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开通VIP会员，即可畅享动感歌词~"
        android:textSize="14dp"
        android:textColor="#f9f9f9"
        android:layout_marginTop="24dp"
        android:layout_marginStart="34dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_title"/>

    <SeekBar
        android:id="@+id/seek_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/dialog_tips_second"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="效果如下图："
        android:textSize="12dp"
        android:textColor="#939393"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/dialog_tips_first"
        app:layout_constraintTop_toBottomOf="@+id/dialog_tips_first"/>

    <FrameLayout
        android:id="@+id/dialog_player_parent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="14dp"
        app:layout_constraintBottom_toTopOf="@+id/guildLine_one"
        app:layout_constraintTop_toBottomOf="@id/dialog_tips_second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/dialog_preview_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:use_controller="false" />
    </FrameLayout>

    <com.google.android.exoplayer2.ui.PlayerControlView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:show_timeout="0"
        android:id="@+id/exo_controller_player"
        app:controller_layout_id="@layout/layout_exo_player_control"
        app:layout_constraintTop_toBottomOf="@+id/dialog_player_parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


    <View
        android:id="@+id/guildLine_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="34dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="48dp"
        android:background="#333333"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/bt_cancel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="41dp"
        android:gravity="center_vertical|end"
        android:clickable="false"
        android:text="取消"
        android:textColor="#898994"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guildLine_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guildLine_one" />

    <View
        android:id="@+id/guildLine_two"
        android:layout_width="1dp"
        android:layout_height="15dp"
        android:background="#333333"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guildLine_one"/>

    <TextView
        android:id="@+id/bt_become_vip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical|start"
        android:clickable="false"
        android:text="开通VIP"
        android:textColor="#ED6D86"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guildLine_two"
        app:layout_constraintTop_toBottomOf="@+id/guildLine_one" />


</androidx.constraintlayout.widget.ConstraintLayout>